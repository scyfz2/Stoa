<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nuoquan.mapper.nq1.EventsCalenderMapper">
    <resultMap id="BaseResultMap" type="com.nuoquan.pojo.EventsCalendar">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="id" jdbcType="VARCHAR" property="id" />
        <result column="title" jdbcType="VARCHAR" property="eventTitle" />
        <result column="description" jdbcType="LONGVARCHAR" property="eventDescription" />
        <result column="faculty" jdbcType="VARCHAR" property="faculty" />
        <result column="degree" jdbcType="VARCHAR" property="degree" />
        <result column="venue" jdbcType="VARCHAR" property="eventVenue" />
        <result column="date" jdbcType="VARCHAR" property="eventDate" />
        <result column="time" jdbcType="VARCHAR" property="eventTime" />
        <result column="status" jdbcType="INTEGER" property="status" />
        <result column="is_outdated" jdbcType="INTEGER" property="isOutdated" />
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate" />
    </resultMap>

    <select id="queryAllEventsCalendar" resultMap="BaseResultMap">
        select ec.* from nuoquan.eventsCalendar ec
        where
            1 = 1
          and ec.status = 1
          and ec.faculty = #{faculty}
          and ec.degree = #{degree}
        order by ec.create_date desc
    </select>

    <select id="queryTodayEventCalendar" resultMap="BaseResultMap">
        select ec.* from nuoquan.eventsCalendar ec
        where
              1 = 1
          and ec.status = 1
          and ec.date = #{currentDate}
          and ec.faculty = #{faculty}
          and ec.degree = #{degree}
        order by ec.create_date desc
    </select>
</mapper>

